@page "/card/create"
@using KZHub.WebClient.DTOs.Card;


<h3>Create Card</h3>

<form method="post" @onsubmit="PostCard">
    <input @bind-value="Card.Zastep" />
    <input @bind-value="Card.Date" type="date" />
    <input @bind-value="Card.Place" />

    @foreach(var p in Card.Points)
    {
        <div class="d-block">
            <input @bind-value="p.Time" type="time" />
            <input @bind-value="p.Title" />
            <input @bind-value="p.ZastepMember" />
        </div>
    }
    <button @onclick="AddPoint">Dodaj punkt zbiórki!</button>

    <input @bind-value="Card.RequiredItems"/>

    <input type="submit" value="Wyślij!" />
</form>

@code {
    public CreateCardDTO Card = new CreateCardDTO();


    private void PostCard()
    {

    }

    private void AddPoint()
    {
        Card.Points.Add(new CreatePointDTO());
    }

}
